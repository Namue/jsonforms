{
  "extends": "../../tsconfig.base",
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": ["ES2022", "dom"]
  },
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "generateCodeForLibraries": false,
    "skipTemplateCodegen": true,
    "enableIvy": false
  }
}
